# ==============================================
# React SPA Template - Environment Variables
# ==============================================
# Copy this file to .env and update the values
# All variables prefixed with VITE_ are available in the browser

# ==============================================
# API Configuration
# ==============================================
# Base URL for your backend API
VITE_API_BASE_URL=http://localhost:3001/api

# Alternative for production (uncomment and update)
# VITE_API_BASE_URL=https://your-api.example.com/api

# API request timeout (milliseconds)
VITE_API_TIMEOUT=10000

# ==============================================
# Application Settings
# ==============================================
# Application name displayed in UI
VITE_APP_NAME="React SPA Template"

# Application version
VITE_APP_VERSION=1.0.0

# Environment (development, staging, production)
NODE_ENV=development

# ==============================================
# Authentication & Security
# ==============================================
# JWT token expiration time (in minutes)
VITE_TOKEN_EXPIRES_IN=60

# Cookie settings for authentication
VITE_COOKIE_SECURE=false
VITE_COOKIE_SAME_SITE=lax

# Local storage prefix to avoid conflicts
VITE_STORAGE_PREFIX=spa_template_

# ==============================================
# Feature Flags
# ==============================================
# Enable/disable features in different environments
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Mock API responses (for development without backend)
VITE_USE_MOCK_API=false

# ==============================================
# UI & UX Settings
# ==============================================
# Toast notification duration (milliseconds)
VITE_TOAST_DURATION=4000

# Loading spinner delay (milliseconds)
VITE_LOADING_DELAY=200

# ==============================================
# External Services (Optional)
# ==============================================
# Error reporting (e.g., Sentry)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics (e.g., Google Analytics)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# File upload service
# VITE_UPLOAD_MAX_SIZE=10485760
# VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# ==============================================
# Social Authentication (Optional)
# ==============================================
# Google OAuth
# VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# GitHub OAuth
# VITE_GITHUB_CLIENT_ID=your-github-client-id

# ==============================================
# Production Settings
# ==============================================
# Enable HTTPS enforcement in production
# VITE_FORCE_HTTPS=true

# CDN URL for static assets (production)
# VITE_CDN_URL=https://cdn.example.com

# Content Security Policy (production)
VITE_CSP_ENABLED=true
